<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/layout_listview_material"
        android:layout_marginBottom="15dp">

    <ImageView
        android:id="@+id/iv_material_img"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:src="@android:color/black"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="150dip"
        android:layout_toRightOf="@+id/iv_material_img"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="0dip" >
        <TextView
            android:id="@+id/tv_text"
            android:padding="20dp"
            android:textSize="10sp"
            android:textColor="@android:color/black"
            android:background="@drawable/textview_listview_material"
            android:layout_width="fill_parent"
            android:layout_height="100dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_text">

            <Button
                android:id="@+id/b_view_material"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/b_view_material"
                android:textSize="10sp"
                android:padding="15dp"
                android:textColor="@android:color/black"
                android:background="@drawable/button_listview_material"/>

            <Button
                android:id="@+id/b_edit_material"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/b_edit_material"
                android:textSize="10sp"
                android:padding="15dp"
                android:textColor="@android:color/black"
                android:background="@drawable/button_listview_material"/>

            <Button
                android:id="@+id/b_del_material"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/b_del_material"
                android:textSize="10sp"
                android:padding="15dp"
                android:textColor="@android:color/black"
                android:background="@drawable/button_listview_material"/>

            </LinearLayout>

    </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>